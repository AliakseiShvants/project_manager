<tr>
  <%= render 'base-task', {task: task } %>
  <% if current_user.admin? %>
    <th >
      <%= link_to "update", edit_task_path(task), class: 'btn btn-warning' %>
    </th>

    <th>
      <%#= render partial: "shared/_delete-modal.html.erb" %>
      <button type="button" class="btn btn-danger"
              data-toggle="modal" data-target="#deleteModal<%= task.id %>">
        Delete
      </button>

    </th>
  <% end %>
</tr>

<div class="modal fade" id="deleteModal<%= task.id %>" tabindex="-1" role="dialog"
     aria-labelledby="deleteModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
        <button class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        Are you sure?
      </div>

      <!-- Delete button in the footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          Cancel
        </button>
        <%= link_to 'Delete', task, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>