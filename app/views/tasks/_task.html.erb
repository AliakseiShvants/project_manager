<%# provide(:title, 'Tasks') %>
<tr>
  <th>
    <%= task.title%>
  </th>
  <th colspan="2">
    <%= task.description %>
  </th>
  <th>
    <%= task.status %>
  </th>
  <th >
    <%= link_to "update", edit_task_path(task), class: 'btn btn-warning' %>
  </th>

  <th>
    <% if current_user.admin? %>
      <button type="button" class="btn btn-danger"
              data-toggle="modal" data-target="#deleteModal<%= task.id %>">
        delete
      </button>
    <% end %>
  </th>
</tr>

