<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.first_name %>
      </h1>
    </section>
  </aside>
</div>
<div>
  <h4>Info:</h4>
  <p>
    <%= @user.first_name %> <%= @user.last_name %>
    <br>
    <%= @user.email %>
  </p>
</div>

<% if @user.tasks.any? %>
  <%= render 'shared/base-task' %>
<% elsif !@user.admin? %>
  <div class="center">
    <h3>Task list is empty</h3>
  </div>
<% end %>


<%#= render 'shared/show_tasks', { tasks: @user.tasks} %>