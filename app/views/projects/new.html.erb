<h1>Add new project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/error_messages', { temp: @project } %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :summary %>
      <%= f.text_field :summary, class: 'form-control' %>

      <div>
        <div id="start-date">
          <%= f.label :start_date %>
          <%= f.date_field :start_date, class: 'form-control' %>
        </div>
        <div id="start-time">
          <%= "Start time" %>
          <%= f.time_field :start_date, ignore_date: true, class: 'form-control' %>
        </div>
      </div>

      <div>
        <div id="end-date">
          <%= f.label :end_date %>
          <%= f.date_field :end_date, class: 'form-control' %>
        </div>
        <div id="end-time">
          <%= "End time" %>
          <%= f.time_field :end_date, ignore_date: true, class: 'form-control' %>
        </div>
      </div>

      <div>
        <div id="submit">
          <%= f.submit "Create new project", class: "btn btn-success" %>
        </div>
        <div id="cancel">
          <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
        </div>
      </div>

    <% end %>
  </div>
</div>