<% provide(:title, "Edit user") %>
<h1>Update project</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div>
        <%= f.label :summary %>
        <%= f.text_area :summary, class: 'form-control' %>
      </div>

      <div>
        <div id="start-date">
          <%= f.label :start_date %>
          <%= f.date_field :start_date, class: 'form-control' %>
        </div>
        <div id="start-time">
          <%= "Start time" %>
          <%= f.time_field :start_date, ignore_date: true, class: 'form-control' %>
        </div>
      </div>

      <div>
        <div id="end-date">
          <%= f.label :end_date %>
          <%= f.date_field :end_date, class: 'form-control' %>
        </div>
        <div id="end-time">
          <%= "End time" %>
          <%= f.time_field :end_date, ignore_date: true, class: 'form-control' %>
        </div>
      </div>

      <%= link_to 'Add new task', new_project_task_path(@project.id), class: "btn btn-primary"%>

<!--      <div>-->
<!--        <button type="button" id="show-link" class="btn btn-primary">Add new task</button>-->
<!--      </div>-->

<!--      <div id="task-form">-->
        <%#= render 'shared/task_form' %>
<!--      </div>-->

      <div id="form-footer">
        <div id="submit">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>
        <div id="cancel">
          <%= link_to "Cancel", :back, class: "btn btn-light" %>
        </div>
      </div>
    <% end %>
  </div>
</div>