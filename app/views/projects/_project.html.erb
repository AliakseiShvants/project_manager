<tr>
  <th>
    <%= link_to project.name, project %>
  </th>
  <th colspan="2">
    <%= project.summary %>
  </th>
  <th>
    <%= project.start_date.strftime(date_time_format?) %>
  </th>
  <th>
    <%= check_end_date(project.end_date)%>
  </th>

  <% if current_user.admin? %>
    <th >
      <%= link_to "update", edit_project_path(project), class: 'btn btn-warning' %>
    </th>

    <th>
      <%#= render partial: "shared/_delete-modal.html.erb" %>
      <button type="button" class="btn btn-danger"
              data-toggle="modal" data-target="#deleteModal<%= project.id %>">
        Delete
      </button>

    </th>
  <% end %>
</tr>

<div class="modal fade" id="deleteModal<%= project.id %>" tabindex="-1" role="dialog"
     aria-labelledby="deleteModalLabel"
     aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
        <button class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        Are you sure?
      </div>

      <!-- Delete button in the footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">
          Cancel
        </button>
        <%= link_to 'Delete', project, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>